<div class='reactionRole' onclick='expandSettings()'>

	<div class='reactionRoleHeader'>

		<div class='reactionRoleData'>
			<p class='reactionRoleChannelName'>#<%= channelName %></p>
			<p class='reactionRoleMessage'><%= messageContent %></p>
		</div>

		<button class='deleteElementButton' type='button' onclick='deleteReactionRole(event)'>DELETE</button>

	</div>

	<div class='reactionRoleSettings'>

		<p class='reactionRoleSettingsHeader'>Reactions</p>

		<div class='reactionRoleSettingsContainer'>

			<% for (const emoji in reactions) { %>

				<% const guildEmoji = guildEmojis.find((guildEmoji) => guildEmoji.id === emoji) %>

				<div class='reactionRoleReaction'>

					<span class='deleteReactionRoleReaction material-icons' onclick='deleteReactionRoleReaction(event)'>clear</span>

					<img class='reactionRoleEmoji' src="<%= guildEmoji ? `https://cdn.discordapp.com/emojis/${guildEmoji.id}.${guildEmoji.animated ? 'gif' : 'png'}?size=24` : `https://twemoji.maxcdn.com/v/12.1.2/svg/${emoji.codePointAt(0).toString(16)}.svg` %>">

					<div class='reactionRoleRoles'>

						<% for (const role of reactions[emoji]) { %>

							<% const guildRole = guildRoles.find((guildRole) => guildRole.id === role) %>

							<div class='discordRole'>
								<div class='discordRoleColour' style='background: <%= guildRole?.color %>'></div>
								<p class='discordRoleName'><%= guildRole?.name %></p>
								<span class='deleteDiscordRole material-icons' onclick='deleteDiscordRole(event)'>clear</span>
							</div>

						<% } %>

						<div class='addDiscordRole' onclick='expandDiscordRoleList(event)'>
							<span class='material-icons'>add</span>

							<%- include('../components/listDiscordRole.ejs') %>
						</div>

					</div>

				</div>

			<% } %>

			<div class='reactionRoleSettingsContainerFooter'>

				<div class='addReactionRoleReaction' onclick='addReactionRoleReaction(event)'>
					<span class='material-icons'>add_reaction</span>
				</div>

				<%- include('../components/formButtons.ejs', { cancelFunction: 'cancelReactionRoleChanges(event)', saveFunction: 'saveReactionRoleChanges(event)' }) %>

			</div>

		</div>

	</div>

</div>

<div id='currentServer'>
	<div id='currentServerData'>
		<img id='currentServerDataIcon' src='' draggable='false'>
		<p id='currentServerDataName'></p>
	</div>
	<div id='sidebarButtonContainer'>
		<button id='changeCurrentServerButton' type='button' onclick="location.href = '/orbit/dashboard'">
			<div class='icon'><span class='material-icons'>switch_account</span></div>
		</button>
		<button id='collapseSidebarButton' type='button' onclick='toggleCollapseSidebar()'>
			<div class='icon'><span class='material-icons'>keyboard_double_arrow_left</span></div>
		</button>
	</div>
</div>

<a id='<%= guildID %>' class='categoryLink' href='/orbit/dashboard/<%= guildID %>' draggable='false'>
	<div class='icon'><span class='material-icons'>dashboard</span></div>
	<div class='categoryLinkText'>Dashboard</div>
</a>

<a id='settings' class='categoryLink' href='/orbit/dashboard/<%= guildID %>/settings' draggable='false'>
	<div class='icon'><span class='material-icons'>tune</span></div>
	<div class='categoryLinkText'>Settings</div>
</a>

<div class='featureCategory'>

	<p class='categoryName'>SERVER</p>

	<ul class='categoryItems'>

		<li>
			<a id='welcomeMessage' class='categoryLink' href='/orbit/dashboard/<%= guildID %>/welcomeMessage' draggable='false'>
				<div class='icon'><span class='material-icons'>person_add</span></div>
				<div class='categoryLinkText'>Welcome Message</div>
			</a>
		</li>

		<li>
			<a id='currentlyStreaming' class='categoryLink' href='/orbit/dashboard/<%= guildID %>/currentlyStreaming' draggable='false'>
				<div class='icon'><span class='material-icons'>campaign</span></div>
				<div class='categoryLinkText'>Streamer Shoutout</div>
			</a>
		</li>

	</ul>

</div>

